# === Application Settings ===
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# === Database ===
# Development (SQLite - 간편)
DATABASE_URL=sqlite:///./wedding.db

# Production (PostgreSQL - 권장)
# DATABASE_URL=postgresql://user:password@localhost:5432/wedding_db

# === External Services ===

# Google Maps API (지도 표시용)
# 발급: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Email Service (RSVP 알림)
EMAIL_SERVICE_PROVIDER=sendgrid  # sendgrid | resend | smtp
EMAIL_API_KEY=
EMAIL_FROM=noreply@your-domain.com
EMAIL_TO=your-email@example.com

# Image Storage (갤러리)
STORAGE_PROVIDER=cloudinary  # cloudinary | s3 | local
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3 (대안)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=wedding-invitation

# === Security ===
# 생성 방법: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# CORS 허용 오리진 (쉼표로 구분)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# === Logging & Monitoring ===
LOG_LEVEL=DEBUG  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# Sentry (에러 트래킹, 선택)
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development

# === Optional Features ===

# Google Analytics
# NEXT_PUBLIC_GA_ID=

# Facebook Pixel
# NEXT_PUBLIC_FB_PIXEL_ID=

# Kakao Map (Google Maps 대신 사용)
# NEXT_PUBLIC_KAKAO_MAP_API_KEY=

# === Development Only ===
# Database seeding
SEED_DATABASE=false

# Debug mode
DEBUG=true
